<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="multiply"
    android:orientation="vertical"
    tools:context=".bmr">

    <ImageView
        android:id="@+id/bmrIcon"
        android:layout_width="194dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:contentDescription="BMR Icon"
        app:srcCompat="@drawable/bmr" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="@string/fitcalc"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Basal Metabolic Rate (BMR)"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/weightText"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Enter Your Weight"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="362dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:ems="20"
        android:fontFamily="sans-serif"
        android:hint="Weight (Kg)"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/heightText"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Enter Your Height"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTintMode="multiply">

        <EditText
            android:id="@+id/heightFeetInput"
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:layout_marginStart="27dp"
            android:ems="20"
            android:fontFamily="sans-serif"
            android:hint="Height (feet)"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/andText"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="&amp;"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/heightInchInput"
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:ems="20"
            android:fontFamily="sans-serif"
            android:hint="Height (inches)"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTintMode="multiply">

        <TextView
            android:id="@+id/ageText"
            android:layout_width="192dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Enter Your Age"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/genderText"
            android:layout_width="192dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Select Gender"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTintMode="multiply">

        <EditText
            android:id="@+id/ageInput"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginStart="27dp"
            android:ems="20"
            android:fontFamily="sans-serif"
            android:hint="Age (Years)"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:text="Male"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="sans-serif"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:text="Female"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="sans-serif"/>
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/activityTypeText"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Your Activity"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="362dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:background="@android:drawable/btn_dropdown"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnBMR"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif"
        android:foregroundGravity="center"
        android:includeFontPadding="true"
        android:text="Calculate"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>